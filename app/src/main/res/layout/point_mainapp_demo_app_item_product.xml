<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/ui_3m"
    android:layout_marginVertical="@dimen/ui_1_25m"
    app:cardBackgroundColor="@color/dark_grey"
    app:cardCornerRadius="@dimen/ui_1_25m"
    app:cardElevation="@dimen/ui_025m"
    app:strokeColor="@color/gray_200"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/ui_2m">

        <TextView
            android:id="@+id/point_mainapp_demo_app_product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/primaryTextColor"
            android:textSize="@dimen/ui_medium_body_size"
            android:textStyle="bold"
            tools:text="CafÃ© Americano" />

        <TextView
            android:id="@+id/point_mainapp_demo_app_product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ui_050m"
            android:textColor="@color/primaryTextColor"
            android:textSize="@dimen/ui_body_line_height_m"
            tools:text="$2.50" />

        <TextView
            android:id="@+id/point_mainapp_demo_app_product_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ui_050m"
            android:textColor="@color/grayLight"
            android:textSize="@dimen/ui_body_line_height_xs"
            tools:text="Bebidas" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/point_mainapp_demo_app_product_add_to_cart"
            style="@style/point_mainapp_demo_appTheme.ButtonTheme.ButtonPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/ui_2m"
            android:text="@string/point_mainapp_demo_app_add_to_cart"
            android:textSize="14sp" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
